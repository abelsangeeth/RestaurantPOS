@model RestaurantPOS.Models.Order

@if (Model != null && Model.Items.Any())
{
    foreach (var item in Model.Items)
    {
        <div class="flex justify-between items-center text-sm">
            <div>
                <p class="font-bold text-white">@item.Quantity x @item.Name</p>
                <p class="text-gray-400">$@item.Price.ToString("F2") each</p>
            </div>
            <div class="flex items-center gap-2">
                <p class="font-bold text-white">$@item.Total.ToString("F2")</p>
                <button onclick="removeFromCart(@item.MenuItemId)" class="text-red-500 hover:text-red-400 font-bold">&times;</button>
            </div>
        </div>
    }
}
else
{
    <p class="text-gray-500 text-center">Your cart is empty.</p>
}