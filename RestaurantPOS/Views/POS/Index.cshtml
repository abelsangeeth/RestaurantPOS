@model RestaurantPOS.Models.POSViewModel
@{
    ViewData["Title"] = "Restaurant POS System";
    Layout = "_Layout";
}

@if (Model.CurrentUser == null)
{
    @await Html.PartialAsync("_LoginPartial", Model)
}
else
{
    <!-- Main Application -->
    <div class="min-h-screen flex flex-col">
        @await Html.PartialAsync("_HeaderPartial", Model)
        @await Html.PartialAsync("_NavigationPartial")

        <!-- Main Content -->
        <main class="flex-1 p-6">
            @await Html.PartialAsync("DashboardView", Model)
            @await Html.PartialAsync("TablesView", Model)
            @await Html.PartialAsync("OrdersView", Model)
            @await Html.PartialAsync("MenuView", Model)
            @await Html.PartialAsync("KitchenView", Model)
            @await Html.PartialAsync("ReportsView", Model)
        </main>
    </div>
}