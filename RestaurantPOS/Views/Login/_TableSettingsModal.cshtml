<div id="editTableSettingsModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white p-8 rounded-xl max-w-md w-full mx-4 shadow-2xl">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">⚙️ Table Settings</h2>
            <button type="button" onclick="closeModal('editTableSettingsModal')" class="text-gray-500 hover:text-gray-700 text-2xl">✕</button>
        </div>

        <div id="tableSettingsContent" class="space-y-4">
            <!-- Table Info Display -->
            <div class="bg-gray-50 p-4 rounded-lg space-y-3">
                <div>
                    <label class="text-sm font-medium text-gray-700">Table Number</label>
                    <p id="settingsTableNumber" class="text-lg font-bold text-gray-800">-</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-700">Capacity</label>
                    <p id="settingsTableCapacity" class="text-lg font-bold text-gray-800">-</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-700">Location</label>
                    <p id="settingsTableLocation" class="text-lg font-bold text-gray-800">-</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-700">Type</label>
                    <p id="settingsTableType" class="text-lg font-bold text-gray-800">-</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-700">Status</label>
                    <p id="settingsTableStatus" class="text-lg font-bold text-gray-800">-</p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="space-y-3 border-t pt-4">
                <button onclick="openEditTableForm()" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 font-bold transition-colors flex items-center justify-center space-x-2">
                    <span>✏️</span>
                    <span>Edit Table Settings</span>
                </button>

                <button onclick="confirmDeleteTable()" class="w-full bg-red-600 text-white py-2 rounded-lg hover:bg-red-700 font-bold transition-colors flex items-center justify-center space-x-2">
                    <span>🗑️</span>
                    <span>Delete Table</span>
                </button>

                <button type="button" onclick="closeModal('editTableSettingsModal')" class="w-full bg-gray-500 text-white py-2 rounded-lg hover:bg-gray-600 font-bold transition-colors">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>