@model RestaurantPOS.Models.POSViewModel
@{
    ViewData["Title"] = "Restaurant POS System";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .table-occupied {
            background-color: #ef4444;
        }

        .table-available {
            background-color: #10b981;
        }

        .table-reserved {
            background-color: #f59e0b;
        }

        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 20px;
            border-radius: 8px;
            color: white;
            z-index: 1000;
            animation: slideIn 0.3s ease-out;
        }

            .notification.success {
                background-color: #10b981;
            }

            .notification.error {
                background-color: #ef4444;
            }

        @@keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* Modify Order Modal Styles */
        #modifyOrderModal .modal-content {
            animation: slideInUp 0.3s ease-out;
        }

        .item-total {
            font-family: 'Courier New', monospace;
        }

        #addItemDetails {
            transition: all 0.3s ease;
        }
    </style>
</head>

<body class="bg-gray-100 min-h-screen">
    @if (Model.CurrentUser == null)
    {
        <!-- Login View -->
        <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-800">
            <div class="max-w-md w-full space-y-8 p-8">
                <div class="text-center">
                    <div class="text-6xl mb-4">🏪</div>
                    <h2 class="text-4xl font-bold text-white mb-2">@Model.RestaurantName</h2>
                    <p class="text-xl text-blue-100 mb-8">POS System Login</p>
                </div>
                <div class="bg-white rounded-xl shadow-2xl p-8">
                    <form method="post" action="/Login/Login" class="space-y-6" id="loginForm">
                        @Html.AntiForgeryToken()
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">👤 Username</label>
                            <input type="text" name="username" id="usernameInput"
                                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                   placeholder="Enter username"
                                   value="@(ViewBag.RememberedUsername ?? "")" required>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">🔒 Password</label>
                            <input type="password" name="password" id="passwordInput"
                                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                   placeholder="Enter password" required>
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <input type="checkbox" name="rememberMe" id="rememberMe" value="true"
                                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded cursor-pointer"
                                       @(ViewBag.RememberMe == true ? "checked" : "")>
                                <label for="rememberMe" class="ml-2 block text-sm text-gray-700 cursor-pointer">
                                    Remember me
                                </label>
                            </div>
                            <div class="text-sm">
                                <span class="text-gray-500">for 30 days</span>
                            </div>
                        </div>

                        <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-3 rounded-lg hover:from-blue-700 hover:to-purple-700 font-bold shadow-lg transform hover:scale-105 transition-all">
                            🚀 Login to POS System
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <script>
            // Check if username was remembered and focus on password field
            document.addEventListener('DOMContentLoaded', function() {
                const usernameInput = document.getElementById('usernameInput');
                const passwordInput = document.getElementById('passwordInput');

                if (usernameInput.value) {
                    // Username is pre-filled, focus on password
                    passwordInput.focus();
                } else {
                    usernameInput.focus();
                }
            });
        </script>
    }
    else
    {
        <!-- Main Application -->
        <div class="min-h-screen flex flex-col">
            <!-- Header -->
            <header class="bg-gray-800 text-white p-4">
                <div class="flex justify-between items-center">
                    <div class="flex items-center space-x-4">
                        <h1 class="text-2xl font-bold">@Model.RestaurantName</h1>
                        <div class="text-sm opacity-75">@Model.ContactInfo</div>
                    </div>
                    <div class="flex items-center space-x-6">
                        <div class="text-right">
                            <div class="text-sm opacity-75">Current User</div>
                            <div class="font-bold">@Model.CurrentUser.Name (@Model.CurrentUser.Role)</div>
                        </div>
                        <div class="text-right">
                            <div class="text-sm opacity-75">Date & Time</div>
                            <div class="font-bold" id="currentDateTime">@DateTime.Now.ToString("f")</div>
                        </div>
                        <form method="post" action="/Login/Logout">
                            <button type="submit"
                                    class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg font-medium">
                                🚪 Logout
                            </button>
                        </form>
                    </div>
                </div>
            </header>

            <!-- Navigation -->
            <nav class="bg-white shadow-sm border-b">
                <div class="flex space-x-1 p-4 overflow-x-auto">
                    <button onclick="showView('dashboard')"
                            class="nav-btn px-4 py-2 rounded-lg bg-blue-600 text-white font-medium">
                        Dashboard
                    </button>
                    <button onclick="showView('tables')"
                            class="nav-btn px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-medium">
                        Tables
                    </button>
                    <button onclick="showView('orders')"
                            class="nav-btn px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-medium">
                        Orders
                    </button>
                    <button onclick="showView('menu')"
                            class="nav-btn px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-medium">
                        Menu
                    </button>
                    <button onclick="showView('kitchen')"
                            class="nav-btn px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-medium">
                        Kitchen
                    </button>
                    <button onclick="showView('reports')"
                            class="nav-btn px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-medium">
                        Reports
                    </button>
                    @if (Model.CurrentUser?.Role == "Manager")
                    {
                        <button onclick="showView('staff')"
                                class="nav-btn px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-medium">
                            Staff
                        </button>
                    }
                </div>
            </nav>

            <!-- Main Content -->
            <main class="flex-1 p-6">

                <!-- ==================== DASHBOARD VIEW ==================== -->
                <div id="dashboard-view" class="view">
                    <div class="bg-gradient-to-r from-blue-600 to-purple-700 text-white p-8 rounded-xl shadow-xl mb-8">
                        <h2 class="text-4xl font-bold mb-2">🏪 Welcome to Dashboard</h2>
                        <p class="text-xl opacity-90">Real-time restaurant analytics & management</p>
                        <div class="mt-4 text-sm">
                            <span class="bg-white/20 px-3 py-1 rounded-full mr-2">🕒 Last updated: @DateTime.Now.ToString("hh:mm tt")</span>
                            <span class="bg-white/20 px-3 py-1 rounded-full">📅 @DateTime.Now.ToString("dddd, MMMM dd")</span>
                        </div>
                    </div>

                    <!-- Stats Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                        <div class="bg-gradient-to-br from-green-500 to-green-600 text-white p-6 rounded-xl shadow-xl">
                            <p class="text-green-100 text-sm">💰 Today's Sales</p>
                            <p class="text-4xl font-bold">$@Model.TodaySales.ToString("F2")</p>
                            <div class="mt-4 pt-4 border-t border-green-400/30">
                                <p class="text-sm opacity-90">Total revenue today</p>
                            </div>
                        </div>
                        <div class="bg-gradient-to-br from-orange-500 to-orange-600 text-white p-6 rounded-xl shadow-xl">
                            <p class="text-orange-100 text-sm">🔥 Active Orders</p>
                            <p class="text-4xl font-bold">@Model.ActiveOrdersCount</p>
                            <div class="mt-4 pt-4 border-t border-orange-400/30">
                                <p class="text-sm opacity-90">Currently being processed</p>
                            </div>
                        </div>
                        <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white p-6 rounded-xl shadow-xl">
                            <p class="text-blue-100 text-sm">🪑 Table Status</p>
                            <p class="text-4xl font-bold">@Model.OccupiedTablesCount/@Model.Tables.Count</p>
                            <div class="mt-2">
                                <div class="w-full bg-blue-200/30 rounded-full h-2">
                                    @{
                                        var occupancyPercentage = Model.Tables.Count > 0 ?
                                        (Model.OccupiedTablesCount * 100) / Model.Tables.Count : 0;
                                    }
                                    <div class="bg-white h-2 rounded-full" style="width: @occupancyPercentage%"></div>
                                </div>
                                <p class="text-sm mt-2 opacity-90">
                                    @(Model.Tables.Count - Model.OccupiedTablesCount) available
                                </p>
                            </div>
                        </div>
                        <div class="bg-gradient-to-br from-purple-500 to-purple-600 text-white p-6 rounded-xl shadow-xl">
                            <p class="text-purple-100 text-sm">🍽️ Menu Items</p>
                            <p class="text-4xl font-bold">@Model.MenuItems.Count</p>
                            <div class="mt-4 pt-4 border-t border-purple-400/30">
                                <p class="text-sm opacity-90">Total menu items</p>
                            </div>
                        </div>
                    </div>

                    <!-- Two Column Layout -->
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
                        <!-- Recent Orders Panel -->
                        <div class="bg-white p-6 rounded-xl shadow-xl">
                            <div class="flex justify-between items-center mb-6">
                                <h3 class="text-2xl font-bold text-gray-800">📋 Recent Orders</h3>
                                <span class="text-sm text-gray-500">Overview</span>
                            </div>
                            <div class="space-y-4">
                                @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                                {
                                    foreach (var order in Model.RecentOrders)
                                    {
                                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                            <div>
                                                <p class="font-bold text-gray-800">@order.OrderNumber</p>
                                                <p class="text-sm text-gray-600">@order.CustomerName</p>
                                            </div>
                                            <div class="text-right">
                                                <p class="font-bold text-green-600">$@order.Total.ToString("F2")</p>
                                                <p class="text-sm text-gray-500 capitalize">@order.Status</p>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center py-8 text-gray-500">
                                        <p>No recent orders to display.</p>
                                    </div>
                                }
                            </div>
                            <button onclick="showView('orders')"
                                    class="w-full mt-6 py-3 bg-blue-50 text-blue-600 hover:bg-blue-100 rounded-lg font-semibold">
                                View All Orders →
                            </button>
                        </div>

                        <!-- Table Status Panel -->
                        <div class="bg-white p-6 rounded-xl shadow-xl">
                            <div class="flex justify-between items-center mb-6">
                                <h3 class="text-2xl font-bold text-gray-800">🪑 Table Status Overview</h3>
                                <span class="text-sm text-gray-500">@DateTime.Now.ToString("HH:mm")</span>
                            </div>
                            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mb-6">
                                <div class="text-center p-4 bg-green-50 rounded-lg">
                                    <p class="text-3xl font-bold text-green-600">@(Model.Tables.Count - Model.OccupiedTablesCount)</p>
                                    <p class="text-sm text-green-700">Available</p>
                                </div>
                                <div class="text-center p-4 bg-blue-50 rounded-lg">
                                    <p class="text-3xl font-bold text-blue-600">@Model.OccupiedTablesCount</p>
                                    <p class="text-sm text-blue-700">Occupied</p>
                                </div>
                                <div class="text-center p-4 bg-purple-50 rounded-lg">
                                    <p class="text-3xl font-bold text-purple-600">0</p>
                                    <p class="text-sm text-purple-700">Reserved</p>
                                </div>
                            </div>
                            <div class="space-y-3">
                                <div class="flex items-center">
                                    <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
                                    <span class="text-gray-700">Available - Ready for seating</span>
                                </div>
                                <div class="flex items-center">
                                    <div class="w-3 h-3 bg-orange-500 rounded-full mr-3"></div>
                                    <span class="text-gray-700">Order in progress</span>
                                </div>
                                <div class="flex items-center">
                                    <div class="w-3 h-3 bg-red-500 rounded-full mr-3"></div>
                                    <span class="text-gray-700">Needs cleaning</span>
                                </div>
                            </div>
                            <button onclick="showView('tables')"
                                    class="w-full mt-6 py-3 bg-green-50 text-green-600 hover:bg-green-100 rounded-lg font-semibold">
                                Manage Tables →
                            </button>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="bg-white p-6 rounded-xl shadow-xl">
                        <h3 class="text-2xl font-bold mb-6 text-gray-800">⚡ Quick Actions</h3>
                        <div class="grid grid-cols-2 md:grid-cols-5 gap-5">
                            <button onclick="showView('tables')"
                                    class="flex flex-col items-center justify-center bg-blue-500 text-white p-6 rounded-lg hover:bg-blue-600 transition-all hover:scale-105">
                                <span class="text-2xl mb-2">🪑</span>
                                <span class="font-semibold">Manage Tables</span>
                                <span class="text-sm opacity-90 mt-1">Seat customers</span>
                            </button>
                            <button onclick="showView('orders')"
                                    class="flex flex-col items-center justify-center bg-orange-500 text-white p-6 rounded-lg hover:bg-orange-600 transition-all hover:scale-105">
                                <span class="text-2xl mb-2">📋</span>
                                <span class="font-semibold">View Orders</span>
                                <span class="text-sm opacity-90 mt-1">@Model.ActiveOrdersCount active</span>
                            </button>
                            <button onclick="showView('menu')"
                                    class="flex flex-col items-center justify-center bg-green-500 text-white p-6 rounded-lg hover:bg-green-600 transition-all hover:scale-105">
                                <span class="text-2xl mb-2">🍽️</span>
                                <span class="font-semibold">Manage Menu</span>
                                <span class="text-sm opacity-90 mt-1">@Model.MenuItems.Count items</span>
                            </button>
                            <button onclick="showView('kitchen')"
                                    class="flex flex-col items-center justify-center bg-purple-500 text-white p-6 rounded-lg hover:bg-purple-600 transition-all hover:scale-105">
                                <span class="text-2xl mb-2">👨‍🍳</span>
                                <span class="font-semibold">Kitchen View</span>
                                <span class="text-sm opacity-90 mt-1">Order preparation</span>
                            </button>
                            <button onclick="showView('reports')"
                                    class="flex flex-col items-center justify-center bg-indigo-500 text-white p-6 rounded-lg hover:bg-indigo-600 transition-all hover:scale-105">
                                <span class="text-2xl mb-2">📊</span>
                                <span class="font-semibold">Reports</span>
                                <span class="text-sm opacity-90 mt-1">Daily Reports</span>
                            </button>
                        </div>

                        <!-- Additional Action Buttons -->
                        <div class="grid grid-cols-2 md:grid-cols-2 gap-4 mt-6">
                            <button onclick="showView('reservations')"
                                    class="flex items-center justify-center bg-gray-100 text-gray-700 p-4 rounded-lg hover:bg-gray-200">
                                <span class="text-xl mr-3">📅</span>
                                <span>Reservations</span>
                            </button>
                            @if (Model.CurrentUser?.Role == "Manager")
                            {
                                <button onclick="showView('staff')"
                                        class="flex items-center justify-center bg-gray-100 text-gray-700 p-4 rounded-lg hover:bg-gray-200">
                                    <span class="text-xl mr-3">👥</span>
                                    <span>Staff Management</span>
                                </button>
                            }
                            else
                            {
                                <!-- Optional: Show a disabled button or leave empty -->
                                <div class="opacity-50">
                                    <button disabled
                                            class="flex items-center justify-center bg-gray-100 text-gray-400 p-4 rounded-lg cursor-not-allowed w-full">
                                        <span class="text-xl mr-3">👥</span>
                                        <span>Staff Management</span>
                                    </button>
                                    <p class="text-xs text-gray-500 text-center mt-1">Manager only</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Performance Summary (Bottom Bar) -->
                    <div class="mt-8 bg-gradient-to-r from-gray-800 to-gray-900 text-white p-6 rounded-xl shadow-xl">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div class="text-center">
                                <p class="text-gray-300 text-sm">Daily Performance</p>
                                <p class="text-2xl font-bold">$@Model.TodaySales.ToString("F2")</p>
                                <p class="text-gray-400 text-sm mt-1">Total sales today</p>
                            </div>
                            <div class="text-center">
                                <p class="text-gray-300 text-sm">Active Tables</p>
                                <p class="text-2xl font-bold">@Model.OccupiedTablesCount</p>
                                <p class="text-gray-400 text-sm mt-1">Currently serving</p>
                            </div>
                            <div class="text-center">
                                <p class="text-gray-300 text-sm">Menu Items</p>
                                <p class="text-2xl font-bold">@Model.MenuItems.Count</p>
                                <p class="text-gray-400 text-sm mt-1">Available dishes</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ==================== TABLES VIEW ==================== -->
                <div id="tables-view" class="view hidden">
                    <div class="flex justify-between items-center bg-gradient-to-r from-blue-600 to-blue-700 text-white p-6 rounded-xl shadow-xl mb-6">
                        <div>
                            <h2 class="text-3xl font-bold mb-2">🪑 Table Management</h2>
                            <p class="text-blue-100">Click on a table to manage it</p>
                        </div>
                        <button onclick="openAddTableModal()" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg shadow-lg transform hover:scale-105 transition-all">
                            ➕ Add New Table
                        </button>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
                        <div class="bg-white p-4 rounded-lg shadow text-center">
                            <div class="text-2xl font-bold text-gray-800">@Model.Tables.Count</div>
                            <div class="text-sm text-gray-600">Total Tables</div>
                        </div>
                        <div class="bg-white p-4 rounded-lg shadow text-center">
                            <div class="text-2xl font-bold text-green-600">@Model.Tables.Count(t => t.Status == "available")</div>
                            <div class="text-sm text-gray-600">Available</div>
                        </div>
                        <div class="bg-white p-4 rounded-lg shadow text-center">
                            <div class="text-2xl font-bold text-red-600">@Model.Tables.Count(t => t.Status == "occupied")</div>
                            <div class="text-sm text-gray-600">Occupied</div>
                        </div>
                        <div class="bg-white p-4 rounded-lg shadow text-center">
                            <div class="text-2xl font-bold text-yellow-600">@Model.Tables.Count(t => t.Status == "reserved")</div>
                            <div class="text-sm text-gray-600">Reserved</div>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                        @foreach (var table in Model.Tables)
                        {
                            <div onclick="handleTableClick(@table.Id, '@table.Status')"
                                 class="table-item p-4 rounded-lg cursor-pointer transition-all hover:shadow-lg text-white
                                                        @(table.Status == "occupied" ? "table-occupied" : table.Status == "reserved" ? "table-reserved" : "table-available")">
                                <div class="text-center">
                                    <div class="text-2xl font-bold">@table.TableName</div>
                                    <div class="text-sm capitalize">@table.Status</div>
                                    @if (table.Capacity.HasValue)
                                    {
                                        <div class="text-xs">👥 @table.Capacity seats</div>
                                    }
                                    @if (table.CurrentOrder != null)
                                    {
                                        <div class="text-xs mt-1 font-semibold">$@table.CurrentOrder.Total.ToString("F2")</div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- ==================== ORDERS VIEW ==================== -->
                <div id="orders-view" class="view hidden">
                    <div class="bg-gradient-to-r from-orange-600 to-orange-700 text-white p-6 rounded-xl shadow-xl mb-6">
                        <div class="flex justify-between items-center">
                            <div>
                                <h2 class="text-3xl font-bold mb-2">📋 Order Management</h2>
                                <p class="text-orange-100">Manage all restaurant orders</p>
                            </div>
                            <div class="text-right">
                                <div class="text-sm opacity-90">Total Orders: <span id="totalOrdersCount">0</span></div>
                            </div>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
                        <div class="bg-white p-4 rounded-lg shadow text-center cursor-pointer" onclick="filterOrders('all')">
                            <div class="text-2xl font-bold text-gray-800" id="allOrdersCount">0</div>
                            <div class="text-sm text-gray-600">All Orders</div>
                        </div>
                        <div class="bg-white p-4 rounded-lg shadow text-center cursor-pointer" onclick="filterOrders('dine-in')">
                            <div class="text-2xl font-bold text-green-600" id="dineInOrdersCount">0</div>
                            <div class="text-sm text-gray-600">Dine In</div>
                        </div>
                        <div class="bg-white p-4 rounded-lg shadow text-center cursor-pointer" onclick="filterOrders('delivery')">
                            <div class="text-2xl font-bold text-purple-600" id="deliveryOrdersCount">0</div>
                            <div class="text-sm text-gray-600">Delivery</div>
                        </div>
                        <div class="bg-white p-4 rounded-lg shadow text-center cursor-pointer" onclick="filterOrders('takeaway')">
                            <div class="text-2xl font-bold text-orange-600" id="takeawayOrdersCount">0</div>
                            <div class="text-sm text-gray-600">Take Away</div>
                        </div>
                    </div>
                    <div class="bg-white p-4 rounded-lg shadow-lg mb-6">
                        <div class="flex flex-wrap gap-4 items-center">
                            <select id="orderTypeFilter" onchange="applyFilters()" class="p-2 border rounded-lg">
                                <option value="all">All Types</option>
                                <option value="dine-in">Dine In</option>
                                <option value="delivery">Delivery</option>
                                <option value="takeaway">Take Away</option>
                            </select>
                            <select id="orderStatusFilter" onchange="applyFilters()" class="p-2 border rounded-lg">
                                <option value="all">All Statuses</option>
                                <option value="pending">Pending</option>
                                <option value="preparing">Preparing</option>
                                <option value="ready">Ready</option>
                                <option value="completed">Completed</option>
                            </select>
                            <button onclick="loadOrders()"
                                    class="bg-orange-600 text-white px-4 py-2 rounded-lg hover:bg-orange-700">
                                🔄 Refresh
                            </button>
                        </div>
                    </div>
                    <!-- ORDERS CONTAINER - THIS ID IS CRITICAL -->
                    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6" id="orders-container">
                        <div class="text-center py-12 col-span-full">
