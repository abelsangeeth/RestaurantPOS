            </div>
        </div>
    }

    <!-- Notifications -->
    @if (TempData["Success"] != null)
    {
        <div class="notification success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="notification error">@TempData["Error"]</div>
    }

    <!-- Floating Action Button -->
    <button class="floating-btn no-print" onclick="showView('menu')">
        <i class="fas fa-plus"></i>
    </button>

    <script>
        // Centralized anti-forgery + fetch helper
        function getAntiForgeryToken() {
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            return tokenInput ? tokenInput.value : null;
        }

        async function fetchWithVerification(url, options = {}) {
            options = Object.assign({}, options);
            options.headers = Object.assign({}, options.headers || {});
            const token = getAntiForgeryToken();
            if (token) {
                options.headers['RequestVerificationToken'] = token;
                options.headers['X-CSRF-TOKEN'] = token;
            }
            options.headers['X-Requested-With'] = 'XMLHttpRequest';

            try {
                const resp = await fetch(url, options);
                if (!resp.ok) {
                    const body = await resp.text().catch(() => null);
                    const err = new Error(`HTTP ${resp.status} ${resp.statusText}`);
                    err.body = body;
                    throw err;
                }
                return resp;
            } catch (ex) {
                console.error('fetchWithVerification error:', ex);
                throw ex;
            }
        }

        // Safe server -> client JSON: list of existing table IDs
        const existingTables = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Tables.Select(t => t.Id).ToList()));

        // UI: show / hide views and modals (kept minimal, reuse existing)
        document.addEventListener('DOMContentLoaded', function () {
            showView('dashboard');

            // live time
            const liveTimeEl = document.getElementById('liveTime');
            if (liveTimeEl) {
                setInterval(() => {
                    liveTimeEl.textContent = new Date().toLocaleTimeString('en-US', { hour12: true });
                }, 1000);
            }

            // datetime
            const dtEl = document.getElementById('currentDateTime');
            function updateDateTime() {
                if (!dtEl) return;
                const now = new Date();
                const opts = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' };
                dtEl.textContent = now.toLocaleDateString('en-US', opts);
            }
            updateDateTime();
            setInterval(updateDateTime, 60000);

            // auto-hide TempData notifications already rendered by server
            setTimeout(() => document.querySelectorAll('.notification').forEach(n => n.remove()), 3000);
        });

        function showView(viewName) {
            document.querySelectorAll('.view').forEach(v => v.classList.add('hidden'));
            const sv = document.getElementById(viewName + '-view');
            if (sv) sv.classList.remove('hidden');

            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active', 'gradient-primary', 'text-white');
                item.classList.add('bg-gray-100', 'text-gray-700');
            });

            const viewIndex = ['dashboard', 'tables', 'orders', 'menu', 'kitchen', 'reports'].indexOf(viewName);
            const navItems = document.querySelectorAll('.nav-item');
            if (navItems[viewIndex]) {
                navItems[viewIndex].classList.remove('bg-gray-100', 'text-gray-700');
                navItems[viewIndex].classList.add('active', 'gradient-primary', 'text-white');
            }
        }

        // Modal helpers
        function showModal(id) {
            const m = document.getElementById(id);
            if (m) {
                m.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
        }
        function closeModal(id) {
            const m = document.getElementById(id);
            if (m) {
                m.classList.add('hidden');
                document.body.style.overflow = 'auto';
            }
        }

        // showAddTableForm - use safe existingTables
        function showAddTableForm() {
            const nextNumber = (Array.isArray(existingTables) && existingTables.length) ? Math.max(...existingTables) + 1 : 1;
            const numberInput = document.getElementById('newTableNumber');
            if (numberInput) numberInput.value = nextNumber;
            showModal('addTableModal');
        }

        // load table details
        async function loadTableDetails(tableId) {
            try {
                const resp = await fetch(`/POS/GetTableDetails?tableId=${tableId}`, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                if (!resp.ok) throw new Error('Failed to load table details');
                const json = await resp.json();
                if (json.success) {
                    const table = json.table;
                    const statusEl = document.getElementById('tableCurrentStatus');
                    if (statusEl) {
                        statusEl.textContent = table.status.charAt(0).toUpperCase() + table.status.slice(1);
                        statusEl.className = 'px-4 py-1 rounded-full text-sm font-bold ';
                        if (table.status === 'available') statusEl.className += 'bg-green-100 text-green-800';
                        else if (table.status === 'occupied') statusEl.className += 'bg-red-100 text-red-800';
                        else if (table.status === 'reserved') statusEl.className += 'bg-yellow-100 text-yellow-800';
                    }
                }
            } catch (err) {
                console.error(err);
                showNotification('Error loading table details', 'error');
            }
        }

        function showTableOptions(tableId) {
            const tableIdInput = document.getElementById('tableOptionsTableId');
            if (tableIdInput) tableIdInput.value = tableId;
            showModal('tableOptionsModal');
            loadTableDetails(tableId);
        }

        // Missing function implementations
        function handleTableClick(tableId, tableStatus) {
            showTableOptions(tableId);
        }

        function completeOrder(orderId) {
            showPaymentModal(orderId);
        }

        function showPaymentModal(orderId) {
            const orderIdInput = document.getElementById('paymentOrderId');
            if (orderIdInput) orderIdInput.value = orderId;
            showModal('paymentModal');
        }

        function startTableOrder() {
            const tableId = document.getElementById('tableOptionsTableId')?.value;
            if (tableId) {
                showNotification(`Starting order for Table ${tableId}...`, 'success');
                closeModal('tableOptionsModal');
                showView('menu');
            }
        }

        function showReservationForm() {
            const form = document.getElementById('reservationForm');
            if (form) form.classList.toggle('hidden');
        }

        function hideReservationForm() {
            const form = document.getElementById('reservationForm');
            if (form) form.classList.add('hidden');
        }

        function editTableSettings() {
            showNotification('Edit table settings - Coming soon!', 'success');
        }

        function viewTableHistory() {
            showNotification('Table history - Coming soon!', 'success');
        }

        function filterMenu(category) {
            document.querySelectorAll('.menu-item-card').forEach(item => {
                if (category === 'all' || item.dataset.category === category) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        function filterOrders(orderType) {
            showNotification(`Filter: ${orderType}`, 'success');
        }

        function filterOrdersByStatus(status) {
            showNotification(`Filter by status: ${status}`, 'success');
        }

        function filterOrdersByDate() {
            showNotification('Filtering by date...', 'success');
        }

        function searchOrders() {
            showNotification('Searching orders...', 'success');
        }

        function refreshOrders() {
            showNotification('Refreshing orders...', 'success');
            setTimeout(() => window.location.reload(), 500);
        }
    </script>
