                        <button onclick="showView('reports')" 
                                class="nav-item px-6 py-3 rounded-xl font-medium whitespace-nowrap transition-all duration-300 bg-gray-100 text-gray-700">
                            <i class="fas fa-chart-pie mr-3"></i>
                            Reports
                        </button>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="flex-1 container mx-auto px-6 py-8">
                <!-- Dashboard View -->
                <div id="dashboard-view" class="view">
                    <!-- Welcome Card -->
                    <div class="gradient-primary text-white p-8 rounded-3xl shadow-2xl mb-8">
                        <div class="flex flex-col lg:flex-row items-center justify-between">
                            <div class="mb-6 lg:mb-0">
                                <h2 class="text-4xl font-bold mb-3">Welcome, @Model.CurrentUser.Name! 👋</h2>
                                <p class="text-xl opacity-90">Here's what's happening in your restaurant today.</p>
                                <div class="mt-4 flex items-center space-x-4">
                                    <div class="flex items-center space-x-2">
                                        <i class="far fa-calendar"></i>
                                        <span>@DateTime.Now.ToString("dddd, MMMM dd")</span>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <i class="far fa-clock"></i>
                                        <span id="liveTime">@DateTime.Now.ToString("hh:mm:ss tt")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <div class="text-6xl mb-4">📊</div>
                                <div class="text-2xl font-bold">Live Dashboard</div>
                            </div>
                        </div>
