    <script>
        // ==================== GLOBAL VARIABLES ====================
        let allOrders = [];

        // ==================== VIEW NAVIGATION ====================
        function showView(viewName) {
            console.log('Switching to:', viewName);
            document.querySelectorAll('.view').forEach(v => v.classList.add('hidden'));
            const view = document.getElementById(viewName + '-view');
            if (view) view.classList.remove('hidden');

            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('bg-blue-600', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700');
            });
            if (viewName === 'orders') loadOrders();
            if (viewName === 'kitchen') loadKitchenOrders();
            if (viewName === 'reports') loadReports();
        }

        // ==================== TABLE FUNCTIONS ====================
        function handleTableClick(tableId, status) {
            document.getElementById('tableOptionsTableId').value = tableId;
            document.getElementById('tableOptionsStatus').value = status;
            document.getElementById('tableOptionsNumber').textContent = tableId;
            document.getElementById('tableCurrentStatus').textContent = status.charAt(0).toUpperCase() + status.slice(1);

            // Show/hide set available button based on status
            const setAvailableSection = document.getElementById('setAvailableSection');
            const startOrderBtn = document.getElementById('startOrderBtn');

            if (status === 'occupied' || status === 'reserved') {
                setAvailableSection.classList.remove('hidden');
                startOrderBtn.disabled = true;
                startOrderBtn.classList.add('opacity-50', 'cursor-not-allowed');
            } else {
                setAvailableSection.classList.add('hidden');
                startOrderBtn.disabled = false;
                startOrderBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            }

            document.getElementById('tableOptionsModal').classList.remove('hidden');
        }

        async function startTableOrder() {
            const tableId = document.getElementById('tableOptionsTableId').value;
            const status = document.getElementById('tableOptionsStatus').value;

            if (status !== 'available') {
                showNotification('Table is not available', 'error');
                return;
            }

            try {
                const response = await fetch('/POS/StartTableOrder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ tableId: parseInt(tableId) })
                });
                const result = await response.json();
                if (result.success) {
                    showNotification(result.message, 'success');
                    closeModal('tableOptionsModal');
                    showView('menu');
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        async function setTableAvailable() {
            const tableId = document.getElementById('tableOptionsTableId').value;

            if (!confirm('Are you sure you want to set this table as available? This will free up the table.')) return;

            try {
                const response = await fetch('/POS/SetTableAvailable', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ tableId: parseInt(tableId) })
                });
                const result = await response.json();
                if (result.success) {
                    showNotification(result.message, 'success');
                    closeModal('tableOptionsModal');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        async function openTableSettings() {
            const tableId = document.getElementById('tableOptionsTableId').value;

            try {
                const response = await fetch(`/POS/GetTableDetails?tableId=${tableId}`);
                const result = await response.json();

                if (result.success) {
                    const table = result.table;
                    document.getElementById('settingsTableId').value = table.id;
                    document.getElementById('settingsCapacity').value = table.capacity || 4;
                    document.getElementById('settingsLocation').value = table.location || 'Main Dining';
                    document.getElementById('settingsType').value = table.type || 'Regular';
                    document.getElementById('settingsStatus').value = table.status || 'available';
                    document.getElementById('settingsNotes').value = table.notes || '';

                    // Show warning if table has active order
                    const statusWarning = document.getElementById('statusWarning');
                    if (table.currentOrderId) {
                        statusWarning.classList.remove('hidden');
                    } else {
                        statusWarning.classList.add('hidden');
                    }

                    closeModal('tableOptionsModal');
                    document.getElementById('tableSettingsModal').classList.remove('hidden');
                } else {
                    showNotification(result.message || 'Failed to load table details', 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        function openAddTableModal() {
            document.getElementById('newTableNumber').value = '';
            document.getElementById('newTableCapacity').value = '4';
            document.getElementById('newTableLocation').value = 'Main Dining';
            document.getElementById('newTableType').value = 'Regular';
            document.getElementById('newTableNotes').value = '';
            document.getElementById('addTableModal').classList.remove('hidden');
        }

        // ==================== TOGGLE TABLE SELECTION ====================
        function toggleTableSelection() {
            const orderType = document.getElementById('orderTypeSelect').value;
            const tableDiv = document.getElementById('tableSelectionDiv');
            const tableSelect = document.getElementById('tableSelect');

            if (orderType === 'dine-in') {
                tableDiv.classList.remove('hidden');
                tableSelect.required = true;
            } else {
                tableDiv.classList.add('hidden');
                tableSelect.required = false;
                tableSelect.value = '';
            }
        }

        // ==================== ORDERS FUNCTIONS ====================
        async function loadOrders() {
            console.log('Loading orders...');
            try {
                const response = await fetch('/POS/GetAllOrders');
                const result = await response.json();
                console.log('Orders result:', result);

                if (result.success && result.orders) {
                    allOrders = result.orders;
                    updateOrderStats();
                    renderOrders(allOrders);
                } else {
                    console.error('Failed to load orders:', result.message);
                    document.getElementById('orders-container').innerHTML = '<div class="col-span-full text-center py-12 text-red-500">Error loading orders</div>';
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('orders-container').innerHTML = '<div class="col-span-full text-center py-12 text-red-500">Error: ' + error.message + '</div>';
            }
        }

        function updateOrderStats() {
            document.getElementById('totalOrdersCount').textContent = allOrders.length;
            document.getElementById('allOrdersCount').textContent = allOrders.length;
            document.getElementById('dineInOrdersCount').textContent = allOrders.filter(o => o.orderType === 'dine-in').length;
            document.getElementById('deliveryOrdersCount').textContent = allOrders.filter(o => o.orderType === 'delivery').length;
            document.getElementById('takeawayOrdersCount').textContent = allOrders.filter(o => o.orderType === 'takeaway').length;
        }

        function filterOrders(type) {
            document.getElementById('orderTypeFilter').value = type;
            applyFilters();
        }

        function applyFilters() {
            const typeFilter = document.getElementById('orderTypeFilter').value;
            const statusFilter = document.getElementById('orderStatusFilter').value;

            let filtered = allOrders;
            if (typeFilter !== 'all') filtered = filtered.filter(o => o.orderType === typeFilter);
            if (statusFilter !== 'all') filtered = filtered.filter(o => o.status === statusFilter);

            renderOrders(filtered);
        }

        function renderOrders(orders) {
            const container = document.getElementById('orders-container');
            const noOrdersMsg = document.getElementById('no-orders-message');

            if (!container) return;

            if (orders.length === 0) {
                container.innerHTML = '';
                noOrdersMsg?.classList.remove('hidden');
                return;
            }

            noOrdersMsg?.classList.add('hidden');
            container.innerHTML = orders.map(order => {
                let statusClass = 'bg-gray-100 text-gray-800';
                if (order.status === 'pending') statusClass = 'bg-yellow-100 text-yellow-800';
                if (order.status === 'preparing') statusClass = 'bg-blue-100 text-blue-800';
                if (order.status === 'ready') statusClass = 'bg-green-100 text-green-800';

                return `
                    <div class="bg-white rounded-lg shadow-lg p-4 border border-gray-200">
                        <div class="flex justify-between mb-2">
                            <h3 class="font-bold text-lg">${order.orderNumber || '#' + order.id}</h3>
                            <span class="px-2 py-1 rounded-full text-sm ${statusClass}">${order.status}</span>
                        </div>
                        <div class="mb-2">
                            <p class="text-gray-600">👤 ${order.customerName || 'Walk-in'}</p>
                            <p class="text-gray-600">🍽️ ${order.orderType || 'N/A'}</p>
                            ${order.tableId ? `<p class="text-gray-600">🪑 Table ${order.tableId}</p>` : ''}
                        </div>
                        <div class="flex justify-between items-center mt-3 pt-3 border-t">
                            <span class="font-bold text-green-600">$${(order.total || 0).toFixed(2)}</span>
                            <div class="space-x-1">
                                ${order.status === 'pending' ? `<button onclick="updateOrderStatus(${order.id}, 'preparing')" class="bg-blue-600 text-white px-3 py-1 rounded text-sm">Start</button>` : ''}
                                ${order.status === 'preparing' ? `<button onclick="updateOrderStatus(${order.id}, 'ready')" class="bg-green-600 text-white px-3 py-1 rounded text-sm">Ready</button>` : ''}
                                ${order.status === 'ready' ? `<button onclick="updateOrderStatus(${order.id}, 'completed')" class="bg-purple-600 text-white px-3 py-1 rounded text-sm">Complete</button>` : ''}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        async function updateOrderStatus(orderId, status) {
            if (!confirm('Update order status to ' + status + '?')) return;
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                const response = await fetch('/POS/UpdateOrderStatus', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token || '' },
                    body: `orderId=${orderId}&status=${status}`
                });
                const result = await response.json();
                if (result.success) {
                    showNotification(result.message, 'success');
                    loadOrders();
                    loadKitchenOrders();
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        // ==================== KITCHEN FUNCTIONS ====================
        async function loadKitchenOrders() {
            console.log('Loading kitchen orders...');
            const container = document.getElementById('kitchen-orders-container');
            if (!container) return;

            try {
                const response = await fetch('/POS/GetKitchenOrders');
                const orders = await response.json();
                console.log('Kitchen orders:', orders);

                if (orders.length === 0) {
                    container.innerHTML = `
                        <div class="col-span-full text-center py-12">
                            <div class="text-6xl mb-4">👨‍🍳</div>
                            <h3 class="text-2xl font-bold text-gray-600 mb-2">All Caught Up!</h3>
                            <p class="text-gray-500">No orders to prepare</p>
                        </div>
                    `;
                    return;
                }

                container.innerHTML = orders.map(order => {
                    const isPending = order.status === 'pending';
                    return `
                        <div class="${isPending ? 'bg-red-50 border-red-300' : 'bg-blue-50 border-blue-300'} border-4 rounded-lg p-6 shadow-lg">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h3 class="text-3xl font-bold text-gray-800">${order.ticket}</h3>
                                    <p class="text-sm ${isPending ? 'text-red-600' : 'text-blue-600'} font-bold mt-1">
                                        ${isPending ? '🚨 PENDING' : '⏳ PREPARING'}
                                    </p>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm text-gray-600">🕐 ${order.time}</p>
                                </div>
                            </div>
                            <div class="border-t pt-4">
                                <button onclick="updateOrderStatus(${order.id}, 'ready')" class="w-full bg-green-600 text-white py-3 rounded font-bold hover:bg-green-700">
                                    ✅ Mark Ready
                                </button>
                            </div>
                        </div>
                    `;
                }).join('');
            } catch (error) {
                console.error('Error:', error);
                container.innerHTML = '<div class="col-span-full text-center py-12 text-red-500">Error loading kitchen orders</div>';
            }
        }

        // ==================== REPORTS FUNCTIONS ====================
        async function loadReports() {
            console.log('Loading reports...');
            try {
                const response = await fetch('/POS/GetReports');
                const data = await response.json();
                console.log('Reports data:', data);

                document.getElementById('reports-today-sales').textContent = '$' + (data.todaySales || 0).toFixed(2);
                document.getElementById('reports-completed').textContent = data.completed || 0;
                document.getElementById('reports-pending').textContent = data.pending || 0;
                document.getElementById('reports-total').textContent = data.total || 0;

                const tbody = document.getElementById('reports-table-body');
                if (tbody && data.recent?.length > 0) {
                    tbody.innerHTML = data.recent.map(order => `
                        <tr class="border-b hover:bg-gray-50">
                            <td class="py-3 px-4">${order.id}</td>
                            <td class="py-3 px-4">${order.customer}</td>
                            <td class="py-3 px-4">${order.type}</td>
                            <td class="py-3 px-4">$${(order.total || 0).toFixed(2)}</td>
                            <td class="py-3 px-4"><span class="bg-gray-200 px-2 py-1 rounded text-sm">${order.status}</span></td>
                            <td class="py-3 px-4">${order.time}</td>
                        </tr>
                    `).join('');
                } else {
                    tbody.innerHTML = '<tr><td colspan="6" class="text-center py-8 text-gray-500">No orders today</td></tr>';
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        // ==================== MENU FUNCTIONS ====================
        async function addToOrder(itemId, itemName) {
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                const response = await fetch('/POS/AddToOrder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token || '' },
                    body: `itemId=${itemId}`
                });
                const result = await response.json();
                if (result.success) {
                    showNotification(result.message, 'success');
                    // Update order panel dynamically instead of reloading
                    await refreshCurrentOrder();
                } else {
                    showNotification(result.message || 'Failed to add item', 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        async function updateQuantity(itemId, change) {
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                const response = await fetch('/POS/UpdateOrderQuantity', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token || '' },
                    body: `itemId=${itemId}&change=${change}`
                });
                const result = await response.json();
                if (result.success) {
                    // Update order panel dynamically instead of reloading
                    await refreshCurrentOrder();
                } else {
                    showNotification(result.message || 'Failed to update', 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        // Refresh the current order panel without reloading the page
        async function refreshCurrentOrder() {
            try {
                const response = await fetch('/POS/GetCurrentOrderPartial');
                if (response.ok) {
                    const html = await response.text();
                    const orderContainer = document.getElementById('current-order-items');
                    if (orderContainer) {
                        orderContainer.innerHTML = html;
                    }
                    // Also update total
                    await updateOrderTotal();
                }
            } catch (error) {
                console.error('Error refreshing order:', error);
                // Fallback: reload keeping the menu view active
                sessionStorage.setItem('activeView', 'menu');
                window.location.reload();
            }
        }

        // Update the order total display
        async function updateOrderTotal() {
            try {
                const response = await fetch('/POS/GetCurrentOrderTotal');
                const result = await response.json();
                if (result.success) {
                    const totalEl = document.getElementById('current-order-total');
                    if (totalEl) {
                        totalEl.textContent = '$' + (result.total || 0).toFixed(2);
                    }
                    // Enable/disable process button
                    const processBtn = document.querySelector('#process-order-form button[type="submit"]');
                    if (processBtn) {
                        processBtn.disabled = result.itemCount === 0;
                    }
                }
            } catch (error) {
                console.error('Error updating total:', error);
            }
        }

        // ==================== FORM SUBMISSIONS ====================
        document.addEventListener('DOMContentLoaded', function () {
            // Order form submission
            const orderForm = document.getElementById('process-order-form');
            if (orderForm) {
                orderForm.addEventListener('submit', async function (e) {
                    e.preventDefault();
                    const formData = new FormData(this);
                    const orderType = formData.get('orderType');
                    const tableId = formData.get('tableId');

                    // Validate table selection for dine-in
                    if (orderType === 'dine-in' && !tableId) {
                        showNotification('Please select a table for dine-in orders', 'error');
                        return;
                    }

                    try {
                        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                        const response = await fetch('/POS/ProcessOrder', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token || '' },
                            body: new URLSearchParams(formData).toString()
                        });
                        const result = await response.json();
                        if (result.success) {
                            showNotification(result.message, 'success');
                            setTimeout(() => window.location.reload(), 1000);
                        } else {
                            showNotification(result.message, 'error');
                        }
                    } catch (error) {
                        showNotification('Error: ' + error.message, 'error');
                    }
                });
            }

            // Table settings form submission
            const settingsForm = document.getElementById('tableSettingsForm');
            if (settingsForm) {
                settingsForm.addEventListener('submit', async function (e) {
                    e.preventDefault();

                    const tableData = {
                        tableId: parseInt(document.getElementById('settingsTableId').value),
                        capacity: parseInt(document.getElementById('settingsCapacity').value),
                        location: document.getElementById('settingsLocation').value,
                        type: document.getElementById('settingsType').value,
                        status: document.getElementById('settingsStatus').value,
                        notes: document.getElementById('settingsNotes').value
                    };

                    try {
                        const response = await fetch('/POS/UpdateTable', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(tableData)
                        });
                        const result = await response.json();

                        if (result.success) {
                            showNotification(result.message, 'success');
                            closeModal('tableSettingsModal');
                            setTimeout(() => window.location.reload(), 1000);
                        } else {
                            showNotification(result.message, 'error');
                        }
                    } catch (error) {
                        showNotification('Error: ' + error.message, 'error');
                    }
                });
            }

            // Add table form submission
            const addTableForm = document.getElementById('addTableForm');
            if (addTableForm) {
                addTableForm.addEventListener('submit', async function (e) {
                    e.preventDefault();

                    const tableData = {
                        tableNumber: parseInt(document.getElementById('newTableNumber').value),
                        capacity: parseInt(document.getElementById('newTableCapacity').value),
                        location: document.getElementById('newTableLocation').value,
                        type: document.getElementById('newTableType').value,
                        notes: document.getElementById('newTableNotes').value
                    };

                    if (!tableData.tableNumber || tableData.tableNumber < 1) {
                        showNotification('Please enter a valid table number', 'error');
                        return;
                    }

                    try {
                        const response = await fetch('/POS/AddTable', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(tableData)
                        });
                        const result = await response.json();

                        if (result.success) {
                            showNotification(result.message, 'success');
                            closeModal('addTableModal');
                            setTimeout(() => window.location.reload(), 1000);
                        } else {
                            showNotification(result.message, 'error');
                        }
                    } catch (error) {
                        showNotification('Error: ' + error.message, 'error');
                    }
                });
            }
        });

        // ==================== UTILITY FUNCTIONS ====================
        function closeModal(modalId) {
            document.getElementById(modalId)?.classList.add('hidden');
        }

        function showNotification(message, type) {
            const div = document.createElement('div');
            div.className = `notification ${type}`;
            div.textContent = message;
            document.body.appendChild(div);
            setTimeout(() => div.remove(), 3000);
        }
    </script>

