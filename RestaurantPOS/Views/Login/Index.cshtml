                    </div>

                    <div class="mt-8">
                        <button type="button" onclick="closeModal('tableOptionsModal')"
                                class="w-full bg-gray-500 text-white py-4 rounded-xl font-bold
                                       hover:bg-gray-600 transition-all duration-300">
                            Close
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Modal -->
        <div id="paymentModal" class="fixed inset-0 modal-overlay flex items-center justify-center z-50 hidden">
            <div class="modal-content glass-card p-8 rounded-3xl max-w-md w-full mx-4 shadow-2xl">
                <h2 class="text-2xl font-bold text-gray-800 mb-8">💳 Process Payment</h2>
                <form method="post" action="/POS/CompletePayment" id="paymentForm" class="space-y-6">
                    <input type="hidden" name="orderId" id="paymentOrderId" />
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Payment Method</label>
                        <select name="paymentMethod" 
                                class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl 
                                       focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none
                                       transition-all duration-300">
