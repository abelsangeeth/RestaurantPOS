                                    <div class="text-sm opacity-80">Active Orders</div>
                                    <div class="text-xl font-bold">@Model.ActiveOrdersCount</div>
                                </div>
                            </div>
                        </div>

                        <!-- User Info & Controls -->
                        <div class="flex items-center space-x-6">
                            <!-- DateTime Display -->
                            <div class="hidden lg:block text-right">
                                <div id="currentDateTime" class="text-sm font-medium"></div>
                                <div class="text-xs opacity-80">@Model.ContactInfo</div>
                            </div>

                            <!-- User Profile -->
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 gradient-primary rounded-full flex items-center justify-center">
                                    <span class="font-bold">@Model.CurrentUser.Name[0]</span>
                                </div>
