                            <i class="fas fa-utensils mr-3"></i>
                            Menu & Orders
                            <span class="ml-2 badge badge-primary">@Model.MenuItems.Count</span>
                        </button>
                        <button onclick="showView('kitchen')" 
                                class="nav-item px-6 py-3 rounded-xl font-medium whitespace-nowrap transition-all duration-300 bg-gray-100 text-gray-700">
                            <i class="fas fa-blender mr-3"></i>
                            Kitchen
