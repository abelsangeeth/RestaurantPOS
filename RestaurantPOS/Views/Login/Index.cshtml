                            <h4 class="font-semibold text-gray-800 mb-2">📋 Demo Accounts</h4>
                            <p class="text-sm text-gray-600">Try these credentials to explore different roles</p>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                            <div class="gradient-primary text-white p-4 rounded-xl text-center">
                                <div class="font-bold mb-1">👑 Admin</div>
                                <div class="text-sm">admin / admin123</div>
                            </div>
                            <div class="gradient-success text-white p-4 rounded-xl text-center">
                                <div class="font-bold mb-1">💰 Manager</div>
                                <div class="text-sm">manager / manager123</div>
                            </div>
                            <div class="gradient-warning text-white p-4 rounded-xl text-center">
                                <div class="font-bold mb-1">👨‍🍳 Staff</div>
                                <div class="text-sm">staff / staff123</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
