    <script>
        // ==================== GLOBAL VARIABLES ====================
        let allOrders = [];
        let currentOrderItems = [];

        // ==================== VIEW NAVIGATION ====================
        function showView(viewName) {
            console.log('Switching to:', viewName);
            document.querySelectorAll('.view').forEach(v => v.classList.add('hidden'));
            const view = document.getElementById(viewName + '-view');
            if (view) view.classList.remove('hidden');

            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('bg-blue-600', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700');
            });

            const activeBtn = document.querySelector(`[onclick="showView('${viewName}')"]`);
            if (activeBtn) {
                activeBtn.classList.remove('bg-gray-200', 'text-gray-700');
                activeBtn.classList.add('bg-blue-600', 'text-white');
            }

            if (viewName === 'orders') loadOrders();
            if (viewName === 'kitchen') loadKitchenOrders();
            if (viewName === 'reports') loadReports();
            if (viewName === 'staff') loadStaff();
        }

        // ==================== TABLE FUNCTIONS ====================
        function handleTableClick(tableId, status) {
            document.getElementById('tableOptionsTableId').value = tableId;
            document.getElementById('tableOptionsStatus').value = status;
            document.getElementById('tableOptionsNumber').textContent = tableId;
            document.getElementById('tableCurrentStatus').textContent = status.charAt(0).toUpperCase() + status.slice(1);

            // Show/hide set available button based on status
            const setAvailableSection = document.getElementById('setAvailableSection');
            const startOrderBtn = document.getElementById('startOrderBtn');

            if (status === 'occupied' || status === 'reserved') {
                setAvailableSection.classList.remove('hidden');
                startOrderBtn.disabled = true;
                startOrderBtn.classList.add('opacity-50', 'cursor-not-allowed');
            } else {
                setAvailableSection.classList.add('hidden');
                startOrderBtn.disabled = false;
                startOrderBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            }

            document.getElementById('tableOptionsModal').classList.remove('hidden');
        }

        async function startTableOrder() {
            const tableId = document.getElementById('tableOptionsTableId').value;
            const status = document.getElementById('tableOptionsStatus').value;

            if (status !== 'available') {
                showNotification('Table is not available', 'error');
                return;
            }

            try {
                const response = await fetch('/POS/StartTableOrder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ tableId: parseInt(tableId) })
                });
                const result = await response.json();
                if (result.success) {
                    showNotification(result.message, 'success');
                    closeModal('tableOptionsModal');
                    showView('menu');
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        async function setTableAvailable() {
            const tableId = document.getElementById('tableOptionsTableId').value;

            if (!confirm('Are you sure you want to set this table as available? This will free up the table.')) return;

            try {
                const response = await fetch('/POS/SetTableAvailable', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ tableId: parseInt(tableId) })
                });
                const result = await response.json();
                if (result.success) {
                    showNotification(result.message, 'success');
                    closeModal('tableOptionsModal');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        async function openTableSettings() {
            const tableId = document.getElementById('tableOptionsTableId').value;

            try {
                const response = await fetch(`/POS/GetTableDetails?tableId=${tableId}`);
                const result = await response.json();

                if (result.success) {
                    const table = result.table;
                    document.getElementById('settingsTableId').value = table.id;
                    document.getElementById('settingsCapacity').value = table.capacity || 4;
                    document.getElementById('settingsLocation').value = table.location || 'Main Dining';
                    document.getElementById('settingsType').value = table.type || 'Regular';
                    document.getElementById('settingsStatus').value = table.status || 'available';
                    document.getElementById('settingsNotes').value = table.notes || '';

                    // Show warning if table has active order
                    const statusWarning = document.getElementById('statusWarning');
                    if (table.currentOrderId) {
                        statusWarning.classList.remove('hidden');
                    } else {
                        statusWarning.classList.add('hidden');
                    }

                    closeModal('tableOptionsModal');
                    document.getElementById('tableSettingsModal').classList.remove('hidden');
                } else {
                    showNotification(result.message || 'Failed to load table details', 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        function openAddTableModal() {
            document.getElementById('newTableNumber').value = '';
            document.getElementById('newTableCapacity').value = '4';
            document.getElementById('newTableLocation').value = 'Main Dining';
            document.getElementById('newTableType').value = 'Regular';
            document.getElementById('newTableNotes').value = '';
            document.getElementById('addTableModal').classList.remove('hidden');
        }

        // ==================== TOGGLE TABLE SELECTION ====================
        function toggleTableSelection() {
            const orderType = document.getElementById('orderTypeSelect').value;
            const tableDiv = document.getElementById('tableSelectionDiv');
            const tableSelect = document.getElementById('tableSelect');

            if (orderType === 'dine-in') {
                tableDiv.classList.remove('hidden');
                tableSelect.required = true;
            } else {
                tableDiv.classList.add('hidden');
                tableSelect.required = false;
                tableSelect.value = '';
            }
        }

        // ==================== ORDERS FUNCTIONS ====================
        async function loadOrders() {
            console.log('Loading orders...');
            try {
                const response = await fetch('/POS/GetAllOrders');
                const result = await response.json();
                console.log('Orders result:', result);

                if (result.success && result.orders) {
                    allOrders = result.orders;
                    updateOrderStats();
                    renderOrders(allOrders);
                } else {
                    console.error('Failed to load orders:', result.message);
                    document.getElementById('orders-container').innerHTML = '<div class="col-span-full text-center py-12 text-red-500">Error loading orders</div>';
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('orders-container').innerHTML = '<div class="col-span-full text-center py-12 text-red-500">Error: ' + error.message + '</div>';
            }
        }

        function updateOrderStats() {
            document.getElementById('totalOrdersCount').textContent = allOrders.length;
            document.getElementById('allOrdersCount').textContent = allOrders.length;
            document.getElementById('dineInOrdersCount').textContent = allOrders.filter(o => o.orderType === 'dine-in').length;
            document.getElementById('deliveryOrdersCount').textContent = allOrders.filter(o => o.orderType === 'delivery').length;
            document.getElementById('takeawayOrdersCount').textContent = allOrders.filter(o => o.orderType === 'takeaway').length;
        }

        function filterOrders(type) {
            document.getElementById('orderTypeFilter').value = type;
            applyFilters();
        }

        function applyFilters() {
            const typeFilter = document.getElementById('orderTypeFilter').value;
            const statusFilter = document.getElementById('orderStatusFilter').value;

            let filtered = allOrders;
            if (typeFilter !== 'all') filtered = filtered.filter(o => o.orderType === typeFilter);
            if (statusFilter !== 'all') filtered = filtered.filter(o => o.status === statusFilter);

            renderOrders(filtered);
        }

        function renderOrders(orders) {
            const container = document.getElementById('orders-container');
            const noOrdersMsg = document.getElementById('no-orders-message');

            if (!container) return;

            if (orders.length === 0) {
                container.innerHTML = '';
                noOrdersMsg?.classList.remove('hidden');
                return;
            }

            noOrdersMsg?.classList.add('hidden');
            container.innerHTML = orders.map(order => {
                let statusClass = 'bg-gray-100 text-gray-800';
                if (order.status === 'pending') statusClass = 'bg-yellow-100 text-yellow-800';
                if (order.status === 'preparing') statusClass = 'bg-blue-100 text-blue-800';
                if (order.status === 'ready') statusClass = 'bg-green-100 text-green-800';

                return `
                    <div class="bg-white rounded-lg shadow-lg p-4 border border-gray-200">
                        <div class="flex justify-between mb-2">
                            <h3 class="font-bold text-lg">${order.orderNumber || '#' + order.id}</h3>
                            <span class="px-2 py-1 rounded-full text-sm ${statusClass}">${order.status}</span>
                        </div>
                        <div class="mb-2">
                            <p class="text-gray-600">👤 ${order.customerName || 'Walk-in'}</p>
                            <p class="text-gray-600">🍽️ ${order.orderType || 'N/A'}</p>
                            ${order.tableId ? `<p class="text-gray-600">🪑 Table ${order.tableId}</p>` : ''}
                        </div>
                        <div class="flex justify-between items-center mt-3 pt-3 border-t">
                            <span class="font-bold text-green-600">$${(order.total || 0).toFixed(2)}</span>
                            <div class="space-x-1">
                                <!-- Modify button - only for pending orders -->
                                ${order.status === 'pending' ? `<button onclick="openModifyOrderModal(${order.id})" class="bg-yellow-600 text-white px-3 py-1 rounded text-sm">Modify</button>` : ''}

                                ${order.status === 'pending' ? `<button onclick="updateOrderStatus(${order.id}, 'preparing')" class="bg-blue-600 text-white px-3 py-1 rounded text-sm">Start</button>` : ''}
                                ${order.status === 'preparing' ? `<button onclick="updateOrderStatus(${order.id}, 'ready')" class="bg-green-600 text-white px-3 py-1 rounded text-sm">Ready</button>` : ''}
                                ${order.status === 'ready' ? `<button onclick="updateOrderStatus(${order.id}, 'completed')" class="bg-purple-600 text-white px-3 py-1 rounded text-sm">Complete</button>` : ''}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        async function updateOrderStatus(orderId, status) {
            if (!confirm('Update order status to ' + status + '?')) return;
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                const response = await fetch('/POS/UpdateOrderStatus', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token || '' },
                    body: `orderId=${orderId}&status=${status}`
                });
                const result = await response.json();
                if (result.success) {
                    showNotification(result.message, 'success');
                    loadOrders();
                    loadKitchenOrders();
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Error: ' + error.message, 'error');
            }
        }

        // ==================== MODIFY ORDER FUNCTIONS ====================
        async function openModifyOrderModal(orderId) {
            try {
                // Show loading state
                document.getElementById('modifyOrderItems').innerHTML = `
                    <div class="text-center py-8">
                        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-yellow-600 mx-auto"></div>
                        <p class="text-gray-500 mt-2">Loading order details...</p>
                    </div>
                `;

                // Show modal
                document.getElementById('modifyOrderModal').classList.remove('hidden');

                // Load order details
                const response = await fetch(`/POS/GetOrderDetails?id=${orderId}`);
                const result = await response.json();

                if (result.success) {
                    const order = result.order;
                    document.getElementById('modifyOrderId').value = orderId;
                    document.getElementById('modifyOrderNumber').textContent = order.orderNumber || `#${orderId}`;
                    document.getElementById('modifyCustomerName').textContent = order.customerName || 'Walk-in';
                    document.getElementById('modifyOrderType').textContent = order.orderType || 'N/A';
                    document.getElementById('modifyOrderNotes').value = order.notes || '';
                    document.getElementById('originalTotal').textContent = `$${(order.originalTotal || order.total || 0).toFixed(2)}`;

                    // Render order items
                    renderOrderItems(order.items || []);
                    calculateUpdatedTotal(order.items || []);
                } else {
                    showNotification('Failed to load order details: ' + (result.message || 'Unknown error'), 'error');
                    closeModal('modifyOrderModal');
                }
            } catch (error) {
                console.error('Error loading order details:', error);
                showNotification('Error loading order details: ' + error.message, 'error');
                closeModal('modifyOrderModal');
            }
        }

        function renderOrderItems(items) {
            currentOrderItems = [...items]; // Make a copy
            const container = document.getElementById('modifyOrderItems');

            if (!items || items.length === 0) {
                container.innerHTML = '<p class="text-gray-500 text-center py-4">No items in this order</p>';
                return;
            }

            container.innerHTML = items.map((item, index) => {
                const price = item.price || item.Price || 0;
                const quantity = item.quantity || item.Quantity || 1;
                const total = price * quantity;

                return `
                    <div class="flex items-center justify-between p-3 bg-white border border-gray-200 rounded-lg hover:bg-gray-50">
                        <div class="flex-1">
                            <h4 class="font-bold text-gray-800">${item.name || item.Name}</h4>
                            <p class="text-sm text-gray-600">$${price.toFixed(2)} each • Menu ID: ${item.menuItemId || item.MenuItemId}</p>
                        </div>

                        <div class="flex items-center space-x-4">
                            <!-- Quantity controls -->
                            <div class="flex items-center space-x-2">
                                <button onclick="updateOrderItemQuantity(${index}, -1)"
                                        class="bg-red-500 text-white w-8 h-8 rounded-full hover:bg-red-600">
                                    −
                                </button>
                                <input type="number"
                                       value="${quantity}"
                                       min="1"
                                       data-index="${index}"
                                       onchange="updateOrderItemInput(${index}, this.value)"
                                       class="w-16 p-2 text-center border rounded-lg">
                                <button onclick="updateOrderItemQuantity(${index}, 1)"
                                        class="bg-green-500 text-white w-8 h-8 rounded-full hover:bg-green-600">
                                    +
                                </button>
                            </div>

                            <!-- Item total -->
                            <div class="w-24 text-right">
                                <p class="font-bold text-green-600 item-total">
                                    $${total.toFixed(2)}
                                </p>
                            </div>

                            <!-- Remove button -->
                            <button onclick="removeOrderItem(${index})"
                                    class="text-red-500 hover:text-red-700 p-2">
                                🗑️
                            </button>
                        </div>
                    </div>
                `;
            }).join('');

            calculateUpdatedTotal();
        }

        function updateOrderItemQuantity(index, change) {
            if (currentOrderItems[index]) {
                const newQuantity = (currentOrderItems[index].quantity || currentOrderItems[index].Quantity || 1) + change;
                if (newQuantity >= 1) {
                    currentOrderItems[index].quantity = newQuantity;
                    currentOrderItems[index].Quantity = newQuantity;
                    renderOrderItems(currentOrderItems);
                }
            }
        }

        function updateOrderItemInput(index, value) {
            const quantity = parseInt(value);
            if (quantity >= 1 && currentOrderItems[index]) {
                currentOrderItems[index].quantity = quantity;
                currentOrderItems[index].Quantity = quantity;
                renderOrderItems(currentOrderItems);
            }
        }

        function removeOrderItem(index) {
            if (confirm('Remove this item from the order?')) {
                currentOrderItems.splice(index, 1);
                renderOrderItems(currentOrderItems);
            }
        }

        function updateAddItemDetails() {
            const select = document.getElementById('addItemSelect');
            const quantity = parseInt(document.getElementById('addItemQuantity').value) || 1;
            const selectedOption = select.options[select.selectedIndex];

            if (selectedOption && selectedOption.value) {
                const price = parseFloat(selectedOption.dataset.price);
                const total = price * quantity;

                document.getElementById('selectedItemName').textContent = selectedOption.dataset.name;
                document.getElementById('selectedItemPrice').textContent = price.toFixed(2);
                document.getElementById('selectedItemTotal').textContent = total.toFixed(2);
                document.getElementById('addItemDetails').classList.remove('hidden');
            } else {
                document.getElementById('addItemDetails').classList.add('hidden');
            }
        }

        function addNewItemToOrder() {
            const select = document.getElementById('addItemSelect');
            const quantity = parseInt(document.getElementById('addItemQuantity').value) || 1;
            const selectedOption = select.options[select.selectedIndex];

            if (!selectedOption || !selectedOption.value) {
                showNotification('Please select an item to add', 'error');
                return;
            }

            if (quantity < 1) {
                showNotification('Quantity must be at least 1', 'error');
                return;
            }

            // Check if item already exists in order
            const existingItemIndex = currentOrderItems.findIndex(item =>
                (item.menuItemId || item.MenuItemId) == selectedOption.value
            );

            if (existingItemIndex >= 0) {
                // Update existing item quantity
                currentOrderItems[existingItemIndex].quantity =
                    (currentOrderItems[existingItemIndex].quantity || currentOrderItems[existingItemIndex].Quantity || 1) + quantity;
                currentOrderItems[existingItemIndex].Quantity = currentOrderItems[existingItemIndex].quantity;
            } else {
                // Add new item
                currentOrderItems.push({
                    menuItemId: parseInt(selectedOption.value),
                    MenuItemId: parseInt(selectedOption.value),
                    name: selectedOption.dataset.name,
                    price: parseFloat(selectedOption.dataset.price),
                    Price: parseFloat(selectedOption.dataset.price),
                    quantity: quantity,
                    Quantity: quantity
                });
            }

            // Re-render items
            renderOrderItems(currentOrderItems);

            // Reset add item form
            select.value = '';
            document.getElementById('addItemQuantity').value = 1;
            document.getElementById('addItemDetails').classList.add('hidden');

            showNotification('Item added to order', 'success');
        }

        function calculateUpdatedTotal() {
            const total = currentOrderItems.reduce((sum, item) => {
                const price = item.price || item.Price || 0;
                const quantity = item.quantity || item.Quantity || 1;
                return sum + (price * quantity);
            }, 0);

            document.getElementById('updatedTotal').textContent = `$${total.toFixed(2)}`;
            return total;
        }

