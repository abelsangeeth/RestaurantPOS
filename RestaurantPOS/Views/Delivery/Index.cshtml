@model RestaurantPOS.Models.DeliveryViewModel

@{
    ViewData["Title"] = "Order Delivery";
}

@if (!Model.IsLoggedIn)
{
    <!-- Customer Login/Register Form -->
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-600 via-teal-600 to-emerald-800">
        <div class="max-w-md w-full space-y-8 p-8">
            <div class="text-center">
                <div class="text-6xl mb-4">🛵</div>
                <h2 class="text-4xl font-bold text-white mb-2">@Model.RestaurantName</h2>
                <p class="text-xl text-green-100 mb-8">Order Delivery</p>
            </div>

            <div class="bg-white rounded-xl shadow-2xl p-8">
                @if (TempData["Error"] != null)
                {
                    <div class="mb-4 p-3 bg-red-100 text-red-700 rounded-lg">
                        @TempData["Error"]
                    </div>
                }

                <form method="post" asp-action="Login" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">📱 Phone Number *</label>
                        <input type="tel" name="phone" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Enter your phone number" required>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">👤 Your Name *</label>
                        <input type="text" name="name" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Enter your name" required>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">📧 Email (Optional)</label>
                        <input type="email" name="email" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Enter your email">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">📍 Delivery Address *</label>
                        <textarea name="address" rows="3" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Enter your complete delivery address" required></textarea>
                    </div>

                    <button type="submit" class="w-full bg-gradient-to-r from-green-600 to-teal-600 text-white py-3 rounded-lg hover:from-green-700 hover:to-teal-700 font-bold shadow-lg transform hover:scale-105 transition-all">
                        🛒 Start Ordering
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <a href="@Url.Action("Index", "Login")" class="text-green-600 hover:text-green-800 font-medium">
                        ← Staff Login
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Delivery Order Page -->
    <div class="min-h-screen bg-gray-100">
        @Html.AntiForgeryToken()
        <!-- Header -->
        <header class="bg-gradient-to-r from-green-600 to-teal-600 text-white p-4 shadow-lg">
            <div class="container mx-auto flex justify-between items-center">
                <div class="flex items-center space-x-3">
                    <span class="text-3xl">🛵</span>
                    <div>
                        <h1 class="text-2xl font-bold">@Model.RestaurantName</h1>
                        <p class="text-green-100 text-sm">Welcome, @Model.Customer?.Name</p>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="@Url.Action("OrderHistory")" class="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg transition">
                        📋 My Orders
                    </a>
                    <form method="post" asp-action="Logout" class="inline">
                        <button type="submit" class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded-lg transition">
                            🚪 Logout
                        </button>
                    </form>
                </div>
            </div>
        </header>

        @if (TempData["Success"] != null)
        {
            <div class="container mx-auto mt-4">
                <div class="p-4 bg-green-100 text-green-700 rounded-lg">
                    @TempData["Success"]
                </div>
            </div>
        }

        <div class="container mx-auto p-4">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Menu Items -->
                <div class="lg:col-span-2">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">📋 Menu</h2>
                    
                    @foreach (var category in Model.MenuItems.GroupBy(m => m.Category))
                    {
                        <div class="mb-6">
                            <h3 class="text-lg font-semibold text-gray-700 mb-3 border-b pb-2">@category.Key</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                @foreach (var item in category)
                                {
                                    <div class="bg-white rounded-lg shadow p-4 flex justify-between items-center">
                                        <div>
                                            <h4 class="font-bold text-gray-800">@item.Name</h4>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <p class="text-sm text-gray-500">@item.Description</p>
                                            }
                                            <p class="text-green-600 font-bold">$@item.Price.ToString("F2")</p>
                                        </div>
                                        <button onclick="addToCart(@item.Id)" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg transition transform hover:scale-105">
                                            ➕ Add
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Cart -->
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-xl shadow-lg p-6 sticky top-4">
                        <h2 class="text-xl font-bold text-gray-800 mb-4">🛒 Your Cart</h2>
                        
                        <div id="cart-items" class="space-y-3 max-h-64 overflow-y-auto mb-4">
                            @if (Model.CurrentOrder.Items.Any())
                            {
                                @foreach (var item in Model.CurrentOrder.Items)
                                {
                                    <div class="flex justify-between items-center p-2 bg-gray-50 rounded" data-item-id="@item.MenuItemId">
                                        <div>
                                            <span class="font-medium">@item.Name</span>
                                            <span class="text-gray-500 text-sm">x@item.Quantity</span>
                                        </div>
                                        <div class="flex items-center space-x-2">
                                            <span class="text-green-600">$@item.Total.ToString("F2")</span>
                                            <button onclick="removeFromCart(@item.MenuItemId)" class="text-red-500 hover:text-red-700">✕</button>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-gray-500 text-center py-4">Your cart is empty</p>
                            }
                        </div>

                        <div class="border-t pt-4">
                            <div class="flex justify-between text-lg font-bold mb-4">
                                <span>Total:</span>
                                <span id="cart-total" class="text-green-600">$@Model.CurrentOrder.Total.ToString("F2")</span>
                            </div>

                            <div class="mb-4">
                                <label class="block text-sm font-medium text-gray-700 mb-2">📝 Special Instructions</label>
                                <textarea id="order-notes" rows="2" class="w-full p-2 border border-gray-300 rounded-lg text-sm" placeholder="Any special requests..."></textarea>
                            </div>

                            <button onclick="placeOrder()" id="place-order-btn" class="w-full bg-gradient-to-r from-green-600 to-teal-600 text-white py-3 rounded-lg hover:from-green-700 hover:to-teal-700 font-bold shadow-lg transition @(Model.CurrentOrder.Items.Any() ? "" : "opacity-50 cursor-not-allowed")" @(Model.CurrentOrder.Items.Any() ? "" : "disabled")>
                                🚀 Place Order
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function getAntiForgeryToken() {
            return document.querySelector('input[name="__RequestVerificationToken"]').value;
        }

        function addToCart(menuItemId) {
            fetch('@Url.Action("AddToCart", "Delivery")', {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': getAntiForgeryToken()
                },
                body: `menuItemId=${menuItemId}&quantity=1`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            });
        }

        function removeFromCart(menuItemId) {
            fetch('@Url.Action("RemoveFromCart", "Delivery")', {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': getAntiForgeryToken()
                },
                body: `menuItemId=${menuItemId}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                }
            });
        }

        function placeOrder() {
            const notes = document.getElementById('order-notes').value;
            
            fetch('@Url.Action("PlaceOrder", "Delivery")', {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': getAntiForgeryToken()
                },
                body: `notes=${encodeURIComponent(notes)}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            });
        }
    </script>
}