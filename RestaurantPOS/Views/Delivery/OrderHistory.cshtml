@model RestaurantPOS.Models.OrderHistoryViewModel
@{
    ViewData["Title"] = "My Order History";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-200 font-sans">

    <div class="container mx-auto px-4 py-8">
        <!-- Header -->
        <header class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-4xl font-extrabold text-white">My Orders</h1>
                <p class="text-gray-400">A history of all your orders, @Model.CustomerName.</p>
            </div>
            <div class="flex items-center gap-4">
                <a href="@Url.Action("Index", "Delivery")" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                    Back to Menu
                </a>
                <form asp-action="Logout" asp-controller="Delivery" method="post">
                    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                        Logout
                    </button>
                </form>
            </div>
        </header>

        <div class="space-y-6">
            @if (Model.Orders.Any())
            {
                @foreach (var order in Model.Orders)
                {
                    <div class="bg-gray-800 rounded-xl shadow-lg border border-gray-700 overflow-hidden">
                        <div class="p-6">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h2 class="text-2xl font-bold text-white">Order @order.OrderNumber</h2>
                                    <p class="text-gray-400">@order.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
                                </div>
                                <div class="text-right">
                                    <span class="px-3 py-1 rounded-full text-sm font-semibold
                                        @(order.Status == "completed" ? "bg-green-500/20 text-green-400" :
                                          order.Status == "pending" ? "bg-yellow-500/20 text-yellow-400" :
                                          "bg-blue-500/20 text-blue-400")">
                                        @order.Status
                                    </span>
                                    <p class="text-2xl font-bold text-white mt-2">$@order.Total.ToString("F2")</p>
                                </div>
                            </div>
                            <div class="border-t border-gray-700 mt-4 pt-4">
                                <h4 class="font-semibold text-lg mb-2 text-white">Items:</h4>
                                <ul class="space-y-2">
                                    @foreach (var item in order.Items)
                                    {
                                        <li class="flex justify-between text-gray-300">
                                            <span>@item.Quantity x @item.Name</span>
                                            <span>$@(item.Price * item.Quantity)</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-16 bg-gray-800 rounded-xl">
                    <div class="text-5xl mb-4">📂</div>
                    <h2 class="text-2xl font-bold text-white">No Orders Found</h2>
                    <p class="text-gray-400">You haven't placed any orders yet.</p>
                </div>
            }
        </div>
    </div>

</body>
</html>