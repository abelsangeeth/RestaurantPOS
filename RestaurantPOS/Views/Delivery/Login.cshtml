@model RestaurantPOS.Models.DeliveryViewModel
@{
    ViewData["Title"] = "Customer Portal";
    // Using a specific layout for the login page to avoid conflicts
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="bg-gray-900">
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-orange-400 to-red-500">
        <div class="max-w-md w-full bg-gray-900 rounded-xl shadow-2xl p-8 text-white">
            <div class="text-center mb-8">
                <img src="~/images/delivery.png" alt="Delivery" class="mx-auto h-16 w-auto mb-4" />
                <h2 class="text-4xl font-extrabold">Customer Portal</h2>
                <p class="text-gray-400 mt-2">Order food fast & easy</p>
            </div>

            <!-- Tab Navigation -->
            <div class="flex border-b border-gray-700 mb-6">
                <button id="login-tab-btn" class="flex-1 py-3 text-center font-semibold border-b-2 border-orange-500 text-orange-500">Login</button>
                <button id="register-tab-btn" class="flex-1 py-3 text-center font-semibold text-gray-400">Register</button>
            </div>

            <!-- Login Form -->
            <div id="login-tab">
                <form asp-controller="Delivery" asp-action="Login" method="post" class="space-y-6">
                    @Html.AntiForgeryToken()
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2"><i class="fas fa-user mr-2"></i>Username or Phone Number</label>
                        <input type="text" name="loginIdentifier" class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" placeholder="Enter username or phone number" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2"><i class="fas fa-lock mr-2"></i>Password</label>
                        <input type="password" name="password" class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" placeholder="Enter password" required>
                    </div>
                    <button type="submit" class="w-full bg-orange-600 hover:bg-orange-700 text-white py-3 rounded-lg font-bold shadow-lg transform hover:scale-105 transition-all">
                        Login
                    </button>
                </form>
            </div>

            <!-- Registration Form (hidden by default) -->
            <div id="register-tab" class="hidden">
                <form asp-controller="Delivery" asp-action="Register" method="post" class="space-y-4">
                    @Html.AntiForgeryToken()
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Username</label>
                        <input name="username" class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Password</label>
                        <input name="password" type="password" class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Full Name</label>
                        <input name="name" class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Phone Number</label>
                        <input name="phone" type="tel" class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg" required>
                    </div>
                    <button type="submit" class="w-full bg-gray-700 hover:bg-gray-600 text-white py-3 rounded-lg font-bold">
                        Register
                    </button>
                </form>
            </div>

            <div class="mt-6 text-center">
                <a href="@Url.Action("Index", "Home")" class="text-orange-400 hover:text-orange-300 font-medium transition-colors">
                    ← Back to Main
                </a>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('login-tab-btn').addEventListener('click', function () {
            document.getElementById('login-tab').classList.remove('hidden');
            document.getElementById('register-tab').classList.add('hidden');
            this.classList.add('border-orange-500', 'text-orange-500');
            this.classList.remove('text-gray-400');
            document.getElementById('register-tab-btn').classList.remove('border-orange-500', 'text-orange-500');
            document.getElementById('register-tab-btn').classList.add('text-gray-400');
        });

        document.getElementById('register-tab-btn').addEventListener('click', function () {
            document.getElementById('register-tab').classList.remove('hidden');
            document.getElementById('login-tab').classList.add('hidden');
            this.classList.add('border-orange-500', 'text-orange-500');
            this.classList.remove('text-gray-400');
            document.getElementById('login-tab-btn').classList.remove('border-orange-500', 'text-orange-500');
            document.getElementById('login-tab-btn').classList.add('text-gray-400');
        });

        @if (TempData["Error"] != null)
        {
            <text>
            alert('@Html.Raw(TempData["Error"])');
            </text>
        }
    </script>
</body>
</html>
