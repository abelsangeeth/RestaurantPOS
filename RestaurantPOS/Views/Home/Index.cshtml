@{
    ViewData["Title"] = "Welcome to RestaurantPOS";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white">
    <div class="min-h-screen flex flex-col items-center justify-center">
        <div class="text-center mb-12">
            <h1 class="text-5xl font-extrabold mb-2">RestaurantPOS</h1>
            <p class="text-xl text-gray-400">Your all-in-one solution for restaurant management.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl w-full">
            <!-- Staff POS -->
            <div class="bg-gray-800 rounded-lg shadow-lg p-8 flex flex-col items-center text-center">
                <div class="text-5xl mb-4">🏪</div>
                <h2 class="text-2xl font-bold mb-2">Management POS</h2>
                <p class="text-gray-400 mb-6">Access restricted to restaurant management and staff for managing tables, orders, and kitchen operations..</p>
                <a href="@Url.Action("Staff", "Login")" class="mt-auto w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
                    Enter Management Portal
                </a>
            </div>

            <!-- Customer Delivery -->
            <div class="bg-gray-800 rounded-lg shadow-lg p-8 flex flex-col items-center text-center">
                <div class="text-5xl mb-4">🛵</div>
                <h2 class="text-2xl font-bold mb-2">User Portal</h2>
                <p class="text-gray-400 mb-6">Order your favorite food for delivery, track your order, and manage your account.</p>
                <a href="@Url.Action("Index", "Delivery")" class="mt-auto w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
                    Enter Customer Portal
                </a>
            </div>
        </div>

        <footer class="mt-12 text-center text-gray-500">
            <p>&copy; @DateTime.Now.Year RestaurantPOS | All Rights Reserved</p>
        </footer>
    </div>
</body>
</html>